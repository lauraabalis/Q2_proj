<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Let's Eat!</title>

    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Web Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Boogaloo" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Just+Another+Hand" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300,300i,400,400i,700,700i" rel="stylesheet">

    <!-- Template CSS Files  -->
    <link href="font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="js/plugins/owl-carousel/owl.carousel.css" rel="stylesheet">
    <link href="js/plugins/owl-carousel/owl.theme.css" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet">
    <link href="css/responsive.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
  		  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
  		  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  		<![endif]-->

    <!-- Fav and touch icons -->
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="images/fav-144.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="images/fav-114.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="images/fav-72.png">
    <link rel="apple-touch-icon-precomposed" href="images/fav-57.png">
    <link rel="shortcut icon" href="images/fav.png">

</head>
<body>

        <!--Section Starts -->
        <section id="menu" class="section-area inverse menu-card-section parallax">
            <!-- Nested Container Starts -->
            <div class="container">
                <!-- Heading Starts -->
                <h1 class="section-main-heading inverse text-center"><span>Welcome, <%= user.name %>!</span></h1>
                <!-- Heading Ends -->
                <!-- Spacer Starts -->
                <div class="spacer-small"></div>
                <!-- Spacer Ends -->
                <!-- Nested Row Starts -->
                <div class="row">
                    <!-- Left Col Starts -->
                    <div class="col-sm-4 col-xs-12">

                        <div id="greeting_menu" class="user_div">


                            <h2>What do you want for dinner?</h2>
                            <h2>I want: </h2>
                            <form action="/suggestions/<%= user.id %>" method="post">
                                <input type="text" name="meal_name" placeholder="Your request here.">
                                <input type="submit" name="submit" value="Make Suggestion">
                            </form>
                        </div>

                        <div id="edit_user" class="user_div">
                            <h2>Edit User Info</h2>
                            <form action="/users/<%= user.id %>/suggest_dinner" method="post">
                                <label for="name">Name: </label>
                                <input type="text" name="name" class="user_input" value="<%= user.name %>">
                                <label for="email">Email: </label>
                                <input type="text" name="email" class="user_input" value="<%= user.email %>">
                                <label for="about">About: </label>
                                <textarea name="about" rows="3" cols="80" class="user_input"><%= user.about %></textarea>
                                <input type="submit" name="edit" value="Edit" class="user_input">
                            </form>

                        </div>
                        <div class="">

                            <form action="/users/<%= user.id %>/delete" method="post">
                                <input type="submit" name="delete" value="Delete Account">
                            </form>
                            <br>
                            <br>
                        </div>

                        <script type="text/javascript">
                        </script>

                    </div>
                </div>
                </ul>
            </div>
            <!-- Right Col Ends -->
    </div>
    <!-- Nested Row Ends -->
    </div>
    <!-- Nested Container Ends -->
    </section>
</body>

</html>
